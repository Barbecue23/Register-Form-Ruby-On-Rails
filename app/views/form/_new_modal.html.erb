<div id="confirm_delete_modal" class="modal" data-controller="modal">
  <div class="modal-content">
<head>
    <title>Register Form</title>
    <%= stylesheet_link_tag "new_modal", "data-turbo-track": "reload" %>
</head>
<body>
    <h1>Register Form</h1>
    <%= form_with(model: @form, url: form_index_path) do |f| %>
    <div class="form-row">
        <div class="form-group">
            <%= f.label :firstname, "First Name" %>
            <%= f.text_field :firstname , required: true%>
        </div>

        <div class="form-group">
            <%= f.label :lastname, "Last Name" %>
            <%= f.text_field :lastname , required: true%>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <%= f.label :birthdate %>
            <%= f.date_field :birthdate , required: true%>
        </div>

        <div class="form-group">
            <%= f.label :gender %>
            <div class="radio-group">
                <%= f.radio_button :gender, "male", checked: true %> Male
                <%= f.radio_button :gender, "female" %> Female
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email , required: true%>
            
        </div>
        <div class="form-group">
            <%= f.label :phone, "Phone Number" %>
            <%= f.telephone_field :phonenumber , required: true%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :subject %>
        <%= f.select :subject, options_for_select([["Choose option", ""], "HTML", "CSS", "JavaScript"]) %>
    </div>

    <div class="form-row">
        <div class="form-group">
            <%= f.submit "Submit", class: "submit-btn" %>
        </div>


    </div>
    <% end %>
            <%= button_to 'Cancel', '#', data: {action: 'modal#close'}, class: 'cancel2-button' %>

</body>
</div>
</div>